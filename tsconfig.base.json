{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@katas-nodejs/avidenie": ["packages/avidenie/src/index.ts"],
      "@katas-nodejs/cutajarj": ["packages/cutajarj/src/index.ts"],
      "@katas-nodejs/gustavohenke": ["packages/gustavohenke/src/index.ts"],
      "@katas-nodejs/janantala": ["packages/janantala/src/index.ts"],
      "@katas-nodejs/jiqsaw": ["packages/jiqsaw/src/index.ts"],
      "@katas-nodejs/jonasraoni": ["packages/jonasraoni/src/index.ts"],
      "@katas-nodejs/katas": ["packages/katas/src/index.ts"],
      "@katas-nodejs/mrhead": ["packages/mrhead/src/index.ts"],
      "@katas-nodejs/shihsyun": ["packages/shihsyun/src/index.ts"],
      "@katas-nodejs/yaseenshaik": ["packages/yaseenshaik/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
